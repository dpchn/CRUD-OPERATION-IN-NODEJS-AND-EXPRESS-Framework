<h1 align = 'center'>Add New Student</h1>
	<form action = '/ass_crud/update_details/-1' method = 'POST' align = 'center'>
			<table align = 'center'>
					<tr>
						<td>First Name</td>
						<td>:</td>
						<td><input type='text' name = 'fname'/></td>
					</tr>

					<tr>
						<td>Last Name</td>
						<td>:</td>
						<td><input type='text' name = 'lname'/></td>
					</tr>

					<tr>
						<td>Roll Number</td>
						<td>:</td>
						<td><input type='text' name = 'roll_num'/></td>
					</tr>

					<tr>
						<td>Password</td>
						<td>:</td>
						<td><input type='password' name = 'psw'/></td>
					</tr>
			<table>
		<input type = 'submit' value = '{{title}}' />
	</form>